@model Application

<form action="PublishPackageToUATFolder" method="post">
    <div class="modal-header">
        <h5 class="modal-title">Publish for @Model.Label</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="modal-body">
        <div class="col-md-12">
            @Html.Hidden("ApplicationId",Model.Id)
            <div class="form-group mb-3">
                <label class="col-md-5">
                    Source Folder
                </label>
                <div class="col-md-7">
                   @Html.TextBox("DestinationFolder", Model.SourceFolderName, new { @class = "form-control" })
                </div>


            </div>
            <div class="form-group">
                <label class="col-md-5">
                    Release Folder
                </label>
                <div class="col-md-7">
                    @Html.TextBox("releaseFolder", DateTime.Now.ToString("yyyyMMddHHmm"), new { @class = "form-control" })
                </div>


            </div>
            <div class="form-group">
                <label class="col-md-5">
                    Release Folder
                </label>
                <div class="col-md-7">
                    @Html.TextBoxFor(d => d.ReleaseFolderName, new { @class = "form-control" })
                </div>


            </div>

        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-primary">Save changes</button>
    </div>
</form>
